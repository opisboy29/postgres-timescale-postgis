 # Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=timescaledb

# Database Connection Settings
DB_MAX_CONNECTIONS=1500
DB_SHARED_BUFFERS=2GB

# Ports Configuration
POSTGRES_PORT=5431
PGBOUNCER_PORT=6431
POSTGRES_EXPORTER_PORT=9188

# PgBouncer Configuration
PGBOUNCER_MAX_CLIENT_CONN=2000
PGBOUNCER_DEFAULT_POOL_SIZE=100
PGBOUNCER_MAX_DB_CONNECTIONS=50

# Container Names
DB_CONTAINER_NAME=timescaledb-postgis-prod
PGBOUNCER_CONTAINER_NAME=pgbouncer-timescale
POSTGRES_EXPORTER_CONTAINER_NAME=postgres-exporter-timescale

# Volume Configuration
DB_DATA_PATH=./data_timescale